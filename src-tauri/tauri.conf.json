{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Invox AI",
  "version": "0.1.0",
  "identifier": "com.invox.ai",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Invox AI",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-window",
          "description": "Provides the main window with the core APIs plus dialog, store, and SQL access used across the shell UI.",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "store:default",
            "sql:default",
            "sql:allow-execute"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
